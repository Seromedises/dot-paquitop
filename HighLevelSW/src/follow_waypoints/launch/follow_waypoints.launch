<launch>
  <env name="ROSCONSOLE_FORMAT" value="[${severity}][${thread}][${node}/${function}:${line}]: ${message}"/>

 <arg name="addpose_topic" default="/addpose"/>
 <arg name="posearray_topic" default="/waypoints"/>

  <node pkg="follow_waypoints" type="follow_waypoints.py" name="follow_waypoints" output="screen" clear_params="true">
    <param name="goal_frame_id" value="map"/>
		<param name="base_frame_id" value="base_footprint"/>
    <param name="addpose_topic" value="$(arg addpose_topic)"/>
    <param name="posearray_topic" value="$(arg posearray_topic)"/>
    <param name="waypoint_distance_tolerance" type="double" value="0.75"/>
  </node>
</launch>

